{"ast":null,"code":"import axios from 'axios';\nconst API = process.env.VUE_APP_BASE_URL;\nexport default {\n  data() {\n    return {\n      vote: {},\n      hasVoted: false // 判断用户是否已经投过票\n    };\n  },\n  mounted() {\n    this.fetchVoteDetails(); // 获取投票详情\n  },\n  methods: {\n    async fetchVoteDetails() {\n      const voteId = this.$route.params.id; // 获取投票 ID\n      try {\n        const response = await axios.get(`${API}/api/votes/${voteId}`);\n        this.vote = response.data;\n        // 检查用户是否已投票\n        const userId = localStorage.getItem('userId');\n        const voteResponse = await axios.get(`${API}/api/votes/${voteId}/user/${userId}`);\n        this.hasVoted = voteResponse.data.hasVoted;\n      } catch (error) {\n        console.error('获取投票详情失败:', error);\n      }\n    },\n    async submitVote(option) {\n      const voteId = this.$route.params.id;\n      const userId = localStorage.getItem('userId');\n      try {\n        await axios.post(`${API}/api/votes/${voteId}/vote`, {\n          user_id: userId,\n          option\n        });\n        alert('投票成功');\n        this.hasVoted = true;\n      } catch (error) {\n        console.error('投票失败:', error);\n        alert('投票失败');\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","API","process","env","VUE_APP_BASE_URL","data","vote","hasVoted","mounted","fetchVoteDetails","methods","voteId","$route","params","id","response","get","userId","localStorage","getItem","voteResponse","error","console","submitVote","option","post","user_id","alert"],"sources":["C:\\Users\\拯救者\\Desktop\\text\\community-service\\src\\components\\VoteDetail.vue"],"sourcesContent":["<template>\n    <div>\n      <h2>{{ vote.title }}</h2>\n      <p>{{ vote.description }}</p>\n  \n      <div v-if=\"!hasVoted\">\n        <h3>请选择您的选项：</h3>\n        <div v-for=\"(option, index) in vote.options\" :key=\"index\">\n          <button @click=\"submitVote(option)\">{{ option }}</button>\n        </div>\n      </div>\n  \n      <div v-else>\n        <p>您已投过票。</p>\n      </div>\n    </div>\n  </template>\n  \n  <script>\n  import axios from 'axios';\n  const API = process.env.VUE_APP_BASE_URL;\n  export default {\n    data() {\n      return {\n        vote: {},\n        hasVoted: false, // 判断用户是否已经投过票\n      };\n    },\n    mounted() {\n      this.fetchVoteDetails(); // 获取投票详情\n    },\n    methods: {\n      async fetchVoteDetails() {\n        const voteId = this.$route.params.id; // 获取投票 ID\n        try {\n          const response = await axios.get(`${API}/api/votes/${voteId}`);\n          this.vote = response.data;\n          // 检查用户是否已投票\n          const userId = localStorage.getItem('userId');\n          const voteResponse = await axios.get(`${API}/api/votes/${voteId}/user/${userId}`);\n          this.hasVoted = voteResponse.data.hasVoted;\n        } catch (error) {\n          console.error('获取投票详情失败:', error);\n        }\n      },\n  \n      async submitVote(option) {\n        const voteId = this.$route.params.id;\n        const userId = localStorage.getItem('userId');\n        try {\n          await axios.post(`${API}/api/votes/${voteId}/vote`, { user_id: userId, option });\n          alert('投票成功');\n          this.hasVoted = true;\n        } catch (error) {\n          console.error('投票失败:', error);\n          alert('投票失败');\n        }\n      },\n    },\n  };\n  </script>\n  \n  <style scoped>\n  /* 样式代码 */\n  </style>"],"mappings":"AAmBE,OAAOA,KAAI,MAAO,OAAO;AACzB,MAAMC,GAAE,GAAIC,OAAO,CAACC,GAAG,CAACC,gBAAgB;AACxC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE,CAAC,CAAC;MACRC,QAAQ,EAAE,KAAK,CAAE;IACnB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,gBAAgB,CAAC,CAAC,EAAE;EAC3B,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,gBAAgBA,CAAA,EAAG;MACvB,MAAME,MAAK,GAAI,IAAI,CAACC,MAAM,CAACC,MAAM,CAACC,EAAE,EAAE;MACtC,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMf,KAAK,CAACgB,GAAG,CAAC,GAAGf,GAAG,cAAcU,MAAM,EAAE,CAAC;QAC9D,IAAI,CAACL,IAAG,GAAIS,QAAQ,CAACV,IAAI;QACzB;QACA,MAAMY,MAAK,GAAIC,YAAY,CAACC,OAAO,CAAC,QAAQ,CAAC;