{"ast":null,"code":"export default {\n  name: 'CommunityHome'\n};","map":{"version":3,"names":["name"],"sources":["C:\\Users\\拯救者\\Desktop\\text\\community-service\\src\\components\\CommunityHome.vue"],"sourcesContent":["<template>\r\n  <div class=\"home-container\">\r\n    <!-- 顶部导航栏（用于桌面和平板设备） -->\r\n    <nav v-if=\"!isMobile\" class=\"top-nav\" :class=\"{ 'nav-hidden': isNavHidden }\">\r\n      <div class=\"logo\">社区服务</div>\r\n      <ul>\r\n        <li><a href=\"#\">首页</a></li>\r\n        <li><a href=\"#\">发现</a></li>\r\n        <li><a href=\"#\">我的</a></li>\r\n      </ul>\r\n      <div class=\"toggle-button\" v-if=\"isNavHidden\" @click=\"toggleNav\">☰</div>\r\n    </nav>\r\n\r\n    <!-- 轮播图 -->\r\n    <div class=\"carousel\">\r\n      <img :src=\"carouselImages[currentImage]\" alt=\"轮播图\" />\r\n      <button @click=\"prevImage\">‹</button>\r\n      <button @click=\"nextImage\">›</button>\r\n    </div>\r\n\r\n    <!-- 热门新闻 -->\r\n    <section class=\"hot-news\">\r\n      <h2>热门新闻</h2>\r\n      <div class=\"hot-news-grid\">\r\n        <div v-for=\"news in hotNews\" :key=\"news.id\" class=\"news-item\">\r\n          <img :src=\"news.image\" alt=\"新闻图片\" />\r\n          <p>{{ news.title }}</p>\r\n        </div>\r\n      </div>\r\n    </section>\r\n\r\n    <!-- 新闻列表 -->\r\n    <section class=\"news-list\">\r\n      <h2>新闻列表</h2>\r\n      <ul>\r\n        <li v-for=\"news in newsList\" :key=\"news.id\">\r\n          <a href=\"#\">{{ news.title }}</a>\r\n        </li>\r\n      </ul>\r\n    </section>\r\n\r\n    <!-- 底部导航栏（用于手机设备） -->\r\n    <nav v-if=\"isMobile\" class=\"bottom-nav\">\r\n      <ul>\r\n        <li><a href=\"#\">首页</a></li>\r\n        <li><a href=\"#\">发现</a></li>\r\n        <li><a href=\"#\">我的</a></li>\r\n      </ul>\r\n    </nav>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'CommunityHome',\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* 基本布局 */\r\n.container {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n}\r\n\r\n.hero {\r\n  text-align: center;\r\n  margin-bottom: 40px;\r\n}\r\n\r\n.features {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  justify-content: space-around;\r\n  gap: 20px;\r\n}\r\n\r\n.feature {\r\n  flex: 1;\r\n  min-width: 250px;\r\n  background-color: #f9f9f9;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  text-align: center;\r\n}\r\n\r\n.feature h2 {\r\n  margin-bottom: 10px;\r\n  font-size: 24px;\r\n}\r\n\r\n.feature p {\r\n  font-size: 16px;\r\n  line-height: 1.5;\r\n}\r\n\r\n/* 响应式设计：针对不同屏幕尺寸进行优化 */\r\n@media (max-width: 1200px) {\r\n  .container {\r\n    padding: 15px;\r\n  }\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .hero h1 {\r\n    font-size: 28px;\r\n  }\r\n  .hero p {\r\n    font-size: 16px;\r\n  }\r\n  .features {\r\n    flex-direction: column;\r\n    align-items: center;\r\n  }\r\n  .feature {\r\n    max-width: 90%;\r\n  }\r\n}\r\n\r\n@media (max-width: 480px) {\r\n  .hero h1 {\r\n    font-size: 24px;\r\n  }\r\n  .hero p {\r\n    font-size: 14px;\r\n  }\r\n  .feature h2 {\r\n    font-size: 20px;\r\n  }\r\n  .feature p {\r\n    font-size: 14px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AAqDA,eAAe;EACbA,IAAI,EAAE;AACR,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}