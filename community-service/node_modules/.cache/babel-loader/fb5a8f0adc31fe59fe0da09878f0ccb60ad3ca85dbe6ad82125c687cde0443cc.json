{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      isMobile: false,\n      currentTab: 0,\n      isNavHidden: false,\n      lastScrollTop: 0,\n      activeIndex: '1'\n    };\n  },\n  computed: {\n    // 计算当前应该激活的标签\n    activeTab() {\n      const routeMap = {\n        '/': 0,\n        '/discover': 1,\n        '/profile': 2,\n        '/login': 0\n      };\n      return routeMap[this.$route.path] ?? 0;\n    }\n  },\n  mounted() {\n    this.checkDevice();\n    window.addEventListener('resize', this.checkDevice);\n    // 初始化当前标签\n    this.currentTab = this.activeTab;\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  watch: {\n    // 监听路由变化\n    $route: {\n      immediate: true,\n      handler() {\n        this.currentTab = this.activeTab;\n      }\n    }\n  },\n  methods: {\n    checkDevice() {\n      this.isMobile = window.innerWidth <= 768;\n    },\n    handleScroll() {\n      const currentScrollTop = window.pageYOffset || document.documentElement.scrollTop;\n      this.isNavHidden = currentScrollTop > this.lastScrollTop && currentScrollTop > 100;\n      this.lastScrollTop = currentScrollTop;\n    },\n    handleTabChange(index) {\n      const pathMap = {\n        0: '/',\n        1: '/discover',\n        2: '/profile'\n      };\n      const path = pathMap[index];\n      if (index === 2) {\n        // 处理\"我的\"标签点击\n        const token = localStorage.getItem('authToken');\n        if (!token) {\n          this.$router.push('/login');\n          this.currentTab = 0;\n        } else {\n          this.$router.push(path);\n        }\n      } else if (path) {\n        this.$router.push(path);\n      }\n    }\n  }\n};","map":{"version":3,"names":["data","isMobile","currentTab","isNavHidden","lastScrollTop","activeIndex","computed","activeTab","routeMap","$route","path","mounted","checkDevice","window","addEventListener","handleScroll","watch","immediate","handler","methods","innerWidth","currentScrollTop","pageYOffset","document","documentElement","scrollTop","handleTabChange","index","pathMap","token","localStorage","getItem","$router","push"],"sources":["C:\\Users\\拯救者\\Desktop\\text\\community-service\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- 顶部导航栏（桌面和平板设备） -->\n    <el-menu v-if=\"!isMobile\" :default-active=\"activeIndex\" :class=\"{ 'nav-hidden': isNavHidden }\" mode=\"horizontal\" background-color=\"#444\"\n      text-color=\"#fff\" active-text-color=\"#1e90ff\" class=\"top-menu\">\n      <div class=\"logo\">社区服务</div>\n      <div class=\"menu-right\">\n        <el-menu-item index=\"1\">\n          <router-link to=\"/\">首页</router-link>\n        </el-menu-item>\n        <el-menu-item index=\"2\">\n          <router-link to=\"/discover\">发现</router-link>\n        </el-menu-item>\n        <el-menu-item index=\"3\">\n          <router-link to=\"/profile\">我的</router-link>\n        </el-menu-item>\n      </div>\n    </el-menu>\n\n    <!-- 路由视图，展示每个页面的内容 -->\n    <div :class=\"{ 'content-padding': !isNavHidden && !isMobile }\">\n      <router-view />\n    </div>\n\n    <!-- 底部导航栏（手机设备） -->\n    <van-tabbar v-if=\"isMobile\" :value=\"activeTab\" @change=\"handleTabChange\" active-color=\"#1e90ff\" inactive-color=\"#999\">\n      <van-tabbar-item>\n        <template #icon>\n          <van-icon name=\"home-o\" size=\"24px\" />\n        </template>\n        首页\n      </van-tabbar-item>\n      <van-tabbar-item>\n        <template #icon>\n          <van-icon name=\"apps-o\" size=\"24px\" />\n        </template>\n        发现\n      </van-tabbar-item>\n      <van-tabbar-item>\n        <template #icon>\n          <van-icon name=\"user-o\" size=\"24px\" />\n        </template>\n        我的\n      </van-tabbar-item>\n    </van-tabbar>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      isMobile: false,\n      currentTab: 0,\n      isNavHidden: false,\n      lastScrollTop: 0,\n      activeIndex: '1',\n    };\n  },\n  computed: {\n    // 计算当前应该激活的标签\n    activeTab() {\n      const routeMap = {\n        '/': 0,\n        '/discover': 1,\n        '/profile': 2,\n        '/login': 0\n      };\n      return routeMap[this.$route.path] ?? 0;\n    }\n  },\n  mounted() {\n    this.checkDevice();\n    window.addEventListener('resize', this.checkDevice);\n    // 初始化当前标签\n    this.currentTab = this.activeTab;\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  watch: {\n    // 监听路由变化\n    $route: {\n      immediate: true,\n      handler() {\n        this.currentTab = this.activeTab;\n      }\n    }\n  },\n  methods: {\n    checkDevice() {\n      this.isMobile = window.innerWidth <= 768;\n    },\n    handleScroll() {\n      const currentScrollTop = window.pageYOffset || document.documentElement.scrollTop;\n      this.isNavHidden = currentScrollTop > this.lastScrollTop && currentScrollTop > 100;\n      this.lastScrollTop = currentScrollTop;\n    },\n    handleTabChange(index) {\n      const pathMap = {\n        0: '/',\n        1: '/discover',\n        2: '/profile'\n      };\n      const path = pathMap[index];\n      \n      if (index === 2) {\n        // 处理\"我的\"标签点击\n        const token = localStorage.getItem('authToken');\n        if (!token) {\n          this.$router.push('/login');\n          this.currentTab = 0;\n        } else {\n          this.$router.push(path);\n        }\n      } else if (path) {\n        this.$router.push(path);\n      }\n    }\n  }\n};\n</script>\n\n<style scoped>\n.top-menu {\n  display: flex;\n  /* 启用弹性布局 */\n  align-items: center;\n  /* 垂直居中 */\n  justify-content: space-between;\n  /* 左右分布 */\n  padding: 0 20px;\n  /* 增加一些左右内边距 */\n}\n\n.logo {\n  font-size: 18px;\n  color: white;\n  font-weight: bold;\n}\n\n.menu-right {\n  display: flex;\n  /* 子项横向排列 */\n  gap: 20px;\n  /* 菜单项之间的间距 */\n}\n\n.menu-right a {\n  color: white;\n  text-decoration: none;\n}\n\n.menu-right a:hover {\n  color: #1e90ff;\n}\n\n.el-menu {\n  display: flex;\n  align-items: center;\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  z-index: 1000;\n  transition: top 0.3s;\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);\n}\n\n.nav-hidden {\n  top: -70px;\n}\n\n.content-padding {\n  padding-top: 70px;\n  padding-bottom: 60px;\n}\n\n.toggle-button {\n  cursor: pointer;\n  color: white;\n}\n\n.van-tabbar {\n  position: fixed;\n  bottom: 0;\n  left: 0;\n  width: 100%;\n  z-index: 1000;\n  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);\n  background-color: #fff;\n}\n\n/* Tabbar图标大小自定义 */\n.van-icon {\n  margin-bottom: 4px;\n}\n\n/* 响应式设计 */\n@media (max-width: 768px) {\n  .van-icon {\n    margin-bottom: 4px;\n  }\n}\n\n.menu-right .router-link-active {\n  color: #1e90ff !important;\n}\n</style>"],"mappings":";AAiDA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MACfC,UAAU,EAAE,CAAC;MACbC,WAAW,EAAE,KAAK;MAClBC,aAAa,EAAE,CAAC;MAChBC,WAAW,EAAE;IACf,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACR;IACAC,SAASA,CAAA,EAAG;MACV,MAAMC,QAAO,GAAI;QACf,GAAG,EAAE,CAAC;QACN,WAAW,EAAE,CAAC;QACd,UAAU,EAAE,CAAC;QACb,QAAQ,EAAE;MACZ,CAAC;MACD,OAAOA,QAAQ,CAAC,IAAI,CAACC,MAAM,CAACC,IAAI,KAAK,CAAC;IACxC;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC;IAClBC,MAAM,CAACC,gBAAgB,CAAC,QAAQ,EAAE,IAAI,CAACF,WAAW,CAAC;IACnD;IACA,IAAI,CAACV,UAAS,GAAI,IAAI,CAACK,SAAS;IAChCM,MAAM,CAACC,gBAAgB,CAAC,QAAQ,EAAE,IAAI,CAACC,YAAY,CAAC;EACtD,CAAC;EACDC,KAAK,EAAE;IACL;IACAP,MAAM,EAAE;MACNQ,SAAS,EAAE,IAAI;MACfC,OAAOA,CAAA,EAAG;QACR,IAAI,CAAChB,UAAS,GAAI,IAAI,CAACK,SAAS;MAClC;IACF;EACF,CAAC;EACDY,OAAO,EAAE;IACPP,WAAWA,CAAA,EAAG;MACZ,IAAI,CAACX,QAAO,GAAIY,MAAM,CAACO,UAAS,IAAK,GAAG;IAC1C,CAAC;IACDL,YAAYA,CAAA,EAAG;MACb,MAAMM,gBAAe,GAAIR,MAAM,CAACS,WAAU,IAAKC,QAAQ,CAACC,eAAe,CAACC,SAAS;MACjF,IAAI,CAACtB,WAAU,GAAIkB,gBAAe,GAAI,IAAI,CAACjB,aAAY,IAAKiB,gBAAe,GAAI,GAAG;MAClF,IAAI,CAACjB,aAAY,GAAIiB,gBAAgB;IACvC,CAAC;IACDK,eAAeA,CAACC,KAAK,EAAE;MACrB,MAAMC,OAAM,GAAI;QACd,CAAC,EAAE,GAAG;QACN,CAAC,EAAE,WAAW;QACd,CAAC,EAAE;MACL,CAAC;MACD,MAAMlB,IAAG,GAAIkB,OA