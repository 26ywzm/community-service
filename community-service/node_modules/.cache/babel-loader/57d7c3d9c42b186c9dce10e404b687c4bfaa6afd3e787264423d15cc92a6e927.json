\"#1e90ff\" inactive-color=\"#999\">\r\n      <van-tabbar-item replace :to=\"'/'\">\r\n        <template #icon>\r\n          <van-icon name=\"home-o\" size=\"24px\" />\r\n        </template>\r\n        首页\r\n      </van-tabbar-item>\r\n      <van-tabbar-item replace :to=\"'/discover'\">\r\n        <template #icon>\r\n          <van-icon name=\"search\" size=\"24px\" />\r\n        </template>\r\n        发现\r\n      </van-tabbar-item>\r\n      <van-tabbar-item replace :to=\"'/profile'\">\r\n        <template #icon>\r\n          <van-icon name=\"user-o\" size=\"24px\" />\r\n        </template>\r\n        我的\r\n      </van-tabbar-item>\r\n    </van-tabbar>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      isMobile: false, // 是否是手机端\r\n      activeTab: '/', // 当前激活的Tab\r\n    };\r\n  },\r\n  mounted() {\r\n    this.checkDevice(); // 检查设备\r\n    window.addEventListener('resize', this.checkDevice); // 监听窗口变化\r\n    this.syncActiveTab(); // 同步初始Tab状态\r\n  },\r\n  beforeUnmount() {\r\n    window.removeEventListener('resize', this.checkDevice);\r\n  },\r\n  watch: {\r\n    $route(to) {\r\n      // 监听路由变化，同步导航状态\r\n      this.activeTab = to.path;\r\n    },\r\n  },\r\n  methods: {\r\n    checkDevice() {\r\n      this.isMobile = window.innerWidth <= 768;\r\n    },\r\n    syncActiveTab() {\r\n      // 初始激活状态同步\r\n      this.activeTab = this.$route.path;\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.top-menu {\r\n  display: flex;\r\n  /* 启用弹性布局 */\r\n  align-items: center;\r\n  /* 垂直居中 */\r\n  justify-content: space-between;\r\n  /* 左右分布 */\r\n  padding: 0 20px;\r\n  /* 增加一些左右内边距 */\r\n}\r\n\r\n.logo {\r\n  font-size: 18px;\r\n  color: white;\r\n  font-weight: bold;\r\n}\r\n\r\n.menu-right {\r\n  display: flex;\r\n  /* 子项横向排列 */\r\n  gap: 20px;\r\n  /* 菜单项之间的间距 */\r\n}\r\n\r\n.menu-right a {\r\n  color: white;\r\n  text-decoration: none;\r\n}\r\n\r\n.menu-right a:hover {\r\n  color: #1e90ff;\r\n}\r\n\r\n.el-menu {\r\n  display: flex;\r\n  align-items: center;\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  z-index: 1000;\r\n  transition: top 0.3s;\r\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);\r\n}\r\n\r\n.nav-hidden {\r\n  top: -70px;\r\n}\r\n\r\n.content-padding {\r\n  padding-top: 70px;\r\n  padding-bottom: 60px;\r\n}\r\n\r\n.toggle-button {\r\n  cursor: pointer;\r\n  color: white;\r\n}\r\n\r\n.van-tabbar {\r\n  position: fixed;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  z-index: 1000;\r\n  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);\r\n  background-color: #fff;\r\n}\r\n\r\n/* Tabbar图标大小自定义 */\r\n.van-icon {\r\n  margin-bottom: 4px;\r\n}\r\n\r\n/* 响应式设计 */\r\n@media (max-width: 768px) {\r\n  .van-icon {\r\n    margin-bottom: 4px;\r\n  }\r\n}\r\n</style>"],"mappings":"AAiDA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MAAE;MACjBC,SAAS,EAAE,GAAG,CAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC,EAAE;IACpBC,MAAM,CAACC,gBAAgB,CAAC,QAAQ,EAAE,IAAI,CAACF,WAAW,CAAC,EAAE;IACrD,IAAI,CAACG,aAAa,CAAC,CAAC,EAAE;EACxB,CAAC;EACDC,aAAaA,CAAA,EAAG;IACdH,MAAM,CAACI,mBAAmB,CAAC,QAAQ,EAAE,IAAI,CAACL,WAAW,CAAC;EACxD,CAAC;EACDM,KAAK,EAAE;IACLC,MAAMA,CAACC,EAAE,EAAE;MACT;MACA,IAAI,CAACV,SAAQ,GAAIU,EAAE,CAACC,IAAI;IAC1B;EACF,CAAC;EACDC,OAAO,EAAE;IACPV,WAAWA,CAAA,EAAG;MACZ,IAAI,CAACH,QAAO,GAAII,MAAM,CAACU,UAAS,IAAK,GAAG;IAC1C,CAAC;IACDR,aAAaA,CAAA,EAAG;MACd;MACA,IAAI,CAACL,SAAQ,GAAI,IAAI,CAACS,MAAM,CAACE,IAAI;IACnC;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}