{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  data() {\n    return {\n      order: null // 存储订单详情\n    };\n  },\n  created() {\n    const orderId = this.$route.params.orderId; // 从路由获取订单 ID\n    this.fetchOrderDetails(orderId); // 获取订单详细信息\n  },\n  methods: {\n    async fetchOrderDetails(orderId) {\n      try {\n        const response = await axios.get(`http://localhost:3000/api/orders/${orderId}`, {\n          headers: {\n            Authorization: `Bearer ${localStorage.getItem('authToken')}`\n          }\n        });\n        this.order = response.data; // 保存订单数据\n      } catch (error) {\n        console.error('获取订单详细信息失败:', error);\n        alert('获取订单信息失败，请重试。');\n      }\n    },\n    formatDate(dateString) {\n      const options = {\n        year: 'numeric',\n        month: 'long',\n        day: 'numeric',\n        hour: '2-digit',\n        minute: '2-digit'\n      };\n      return new Date(dateString).toLocaleDateString('zh-CN', options); // 格式化日期\n    },\n    goBack() {\n      this.$router.push('/discover'); // 返回到点餐页面\n    }\n  }\n};","map":{"version":3,"names":["axios","data","order","created","orderId","$route","params","fetchOrderDetails","methods","response","get","headers","Authorization","localStorage","getItem","error","console","alert","formatDate","dateString","options","year","month","day","hour","minute","Date","toLocaleDateString","goBack","$router","push"],"sources":["C:\\Users\\拯救者\\Desktop\\text\\community-service\\src\\components\\OrderDetail.vue"],"sourcesContent":["<template>\r\n    <div class=\"order-detail\">\r\n      <h2>订单详细信息</h2>\r\n  \r\n      <div v-if=\"order\">\r\n        <h3>订单 ID: {{ order.id }}</h3>\r\n        <p>用户邮箱: {{ order.email }}</p>\r\n        <p>订单状态: {{ order.status }}</p>\r\n        <p>总价格: {{ order.total_price }} 元</p>\r\n        <p>创建时间: {{ formatDate(order.created_at) }}</p>\r\n  \r\n        <h4>订单内容:</h4>\r\n        <ul>\r\n          <li v-for=\"detail in order.details\" :key=\"detail.id\">\r\n            {{ detail.menu_item.name }} ({{ detail.quantity }}): {{ detail.price }} 元\r\n          </li>\r\n        </ul>\r\n      </div>\r\n  \r\n      <div v-else>\r\n        <p>正在加载订单信息...</p>\r\n      </div>\r\n  \r\n      <button @click=\"goBack\">返回</button>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import axios from 'axios';\r\n  \r\n  export default {\r\n    data() {\r\n      return {\r\n        order: null, // 存储订单详情\r\n      };\r\n    },\r\n    created() {\r\n      const orderId = this.$route.params.orderId; // 从路由获取订单 ID\r\n      this.fetchOrderDetails(orderId); // 获取订单详细信息\r\n    },\r\n    methods: {\r\n      async fetchOrderDetails(orderId) {\r\n        try {\r\n          const response = await axios.get(`http://localhost:3000/api/orders/${orderId}`, {\r\n            headers: {\r\n              Authorization: `Bearer ${localStorage.getItem('authToken')}`,\r\n            },\r\n          });\r\n          this.order = response.data; // 保存订单数据\r\n        } catch (error) {\r\n          console.error('获取订单详细信息失败:', error);\r\n          alert('获取订单信息失败，请重试。');\r\n        }\r\n      },\r\n  \r\n      formatDate(dateString) {\r\n        const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };\r\n        return new Date(dateString).toLocaleDateString('zh-CN', options); // 格式化日期\r\n      },\r\n  \r\n      goBack() {\r\n        this.$router.push('/discover'); // 返回到点餐页面\r\n      }\r\n    }\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  .order-detail {\r\n    padding: 20px;\r\n  }\r\n  \r\n  button {\r\n    background-color: #4CAF50;\r\n    color: white;\r\n    border: none;\r\n    padding: 10px;\r\n    cursor: pointer;\r\n    border-radius: 5px;\r\n  }\r\n  \r\n  button:hover {\r\n    background-color: #45a049;\r\n  }\r\n  </style>\r\n  "],"mappings":";AA4BE,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,IAAI,CAAE;IA